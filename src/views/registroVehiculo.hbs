
	<div class="container-login100 m-t-100" style="background-image: url('/img/conductor.jpg');">
		<div class="wrap-loginpersonalizado p-l-55 p-r-55 p-t-50 p-b-30">
			<form class="login100-form validate-form" action="/vehiculo/crear" method="POST">
				<span class="login100-form-title p-b-37">
					Registro Vehículo
				</span>
				<input type="hidden" name="estado" value=1/>
				<input type="hidden" name="id_conductor" value="{{user.id}}"/>
				<div class="row">
					<div class="col-6">
						<div class="wrap-input100 validate-input m-b-20" data-validate="Seleccione el tipo de vehículo">
							<label class="control-label letraMorada">Tipo de vehículo</label>
							<select class="form-control form-control-lg" name="tipo_vehiculo">
								<option>Seleccione...</option>
							{{#each lista}}
								<option>{{this.nombre_tipo_vehiculo}}</option>
							{{/each}}
							</select>
							<span class="focus-input100"></span>
						</div>
					</div>
					<div class="col-6">
						<div class="wrap-input100 validate-input m-b-20" data-validate="Ingrese el número de placa">
							<input class="input100 text-secondary" type="text" name="num_placa"
								placeholder="Número de placa">
							<span class="focus-input100"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="wrap-input100 validate-input m-b-20" data-validate="Ingrese el modelo del vehículo">
							<input class="input100 text-secondary" type="text" name="modelo" placeholder="Modelo">
							<span class="focus-input100"></span>
						</div>
					</div>
					<div class="col-6">
						<div class="wrap-input100 validate-input m-b-20" data-validate="Ingrese la marca del vehículo">
							<input class="input100 text-secondary" type="text" name="marca" placeholder="Marca">
							<span class="focus-input100"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="wrap-input100 validate-input m-b-20" data-validate="Ingrese el color">
							<input class="input100 text-secondary" type="text" name="color" placeholder="Color">
							<span class="focus-input100"></span>
						</div>
					</div>
					<div class="col-6">
						<div class="wrap-input100 validate-input m-b-25" data-validate="Ingrese el año del vehículo">
							<input class="input100 text-secondary" type="text" name="ano_vehiculo"
								placeholder="Año del vehículo">
							<span class="focus-input100"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<div class="wrap-input100 validate-input m-b-25" data-validate="Ingrese la fotografía">
							<label class="control-label letraMorada">Subir una imagen del vehículo</label>
							<input type="file" class="form-control-file pb-2 ml-3" name="foto_vehiculo"
							<span class="focus-input100"></span>
						</div>
					</div>
				</div>
				<div class="container-login100-form-btn">
					<button class="login100-form-btn mr-2" type="submit">
						Guardar
					</button>
					<a href="javascript: history.go(-1)" class="login100-form-btn ml-2" type="submit">
						Regresar
					</a>
				</div>	
		</div>
		</form>

	</div>
	</div>